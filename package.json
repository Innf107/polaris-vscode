{
  "name": "polaris",
	"displayName": "Polaris",
	"description": "Syntax Highlighting for the Polaris Programming Language",
	"version": "0.7.0",
	"repository": "https://github.com/Innf107/polaris-vscode",
	"engines": {
		"vscode": "^1.57.1"
	},
	"publisher": "prophetlabs",
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:polaris"
	],
	"main": "./out/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "polaris",
				"extensions": [".pls", ".polaris"],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "polaris",
				"scopeName": "source.polaris",
			 	"path": "./syntaxes/polaris.tmGrammar.json"
			}
		],
		"configuration": {
			"title": "Polaris",
			"properties": {
				"polaris.lspArguments": {
					"type": "string",
					"default": "",
					"description": "Arguments to pass to the language server"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"dependencies": {
		"vscode-languageclient": "^8.0.2"
	},

	"devDependencies": {
		"@types/vscode": "^1.57.1",
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.0",
		"@types/node": "14.x",
		"@typescript-eslint/eslint-plugin": "^5.16.0",
		"@typescript-eslint/parser": "^5.16.0",
		"eslint": "^8.11.0",
		"glob": "^7.2.0",
		"mocha": "^9.2.2",
		"typescript": "^4.5.5",
		"@vscode/test-electron": "^2.1.3"
	}
}
