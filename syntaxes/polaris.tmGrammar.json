{
    "name": "Polaris",
    "scopeName": "source.polaris",
    "patterns": [
        {
            "name": "keyword.control.polaris",
            "match": "\\b(let|in|if|then|else|true|false|async|await|match|usage|description|options|as|not|with|extend|module|import|export|forall|data|type)\\b"
        },
        {
            "name": "comment.line.polaris",
            "match": "#$|#[^{].*$\n?",
            "comment": "Line comment"
        },
        {
            "name": "string.quoted.double.polaris",
            "match": "\"[^\"]*\""
        },
        {
            "name": "entity.name.envvar.polaris",
            "match": "\\$[-_A-Za-z0-9]+",
            "comment": "Environment variable"
        },
        { "include": "#operator" }
    ],
    "repository": {
        "operator": {
            "name": "keyword.operator.polaris",
            "patterns": [
                {
                    "name": "keyword.operator.polaris",
                    "match": "[\\-+*/<>&~|]|(==)|(<=)|(>=)|(:=)|(\\.\\.)"
                }
            ]
        }
    }
}